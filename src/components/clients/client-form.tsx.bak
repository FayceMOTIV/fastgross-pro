"use client";

import { useForm } from "react-hook-form";
import { zodResolver } from "@hookform/resolvers/zod";
import { z } from "zod";
import { Button } from "@/components/ui/button";
import { Input, Textarea, Label } from "@/components/ui/input";
import type { Client } from "@/types";

const clientSchema = z.object({
  name: z.string().min(2, "Le nom doit contenir au moins 2 caractères"),
  type: z.enum(["fastfood", "kebab", "pizzeria", "snack", "restaurant", "autre"]),
  siret: z.string().optional(),
  address: z.object({
    street: z.string().min(1, "L'adresse est requise"),
    city: z.string().min(1, "La ville est requise"),
    postalCode: z.string().regex(/^\d{5}$/, "Code postal invalide"),
    country: z.string().default("France"),
  }),
  contact: z.object({
    name: z.string().min(1, "Le nom du contact est requis"),
    phone: z.string().min(10, "Numéro de téléphone invalide"),
    email: z.string().email("Email invalide").optional().or(z.literal("")),
    role: z.string().optional(),
  }),
  notes: z.string().optional(),
  tags: z.array(z.string()).default([]),
});

type ClientFormData = z.infer<typeof clientSchema>;

interface ClientFormProps {
  client?: Client;
  onSubmit: (data: ClientFormData) => void;
  onCancel: () => void;
  isLoading?: boolean;
}

const typeOptions = [
  { value: "fastfood", label: "Fast-food" },
  { value: "kebab", label: "Kebab" },
  { value: "pizzeria", label: "Pizzeria" },
  { value: "snack", label: "Snack" },
  { value: "restaurant", label: "Restaurant" },
  { value: "autre", label: "Autre" },
];

export function ClientForm({ client, onSubmit, onCancel, isLoading }: ClientFormProps) {
  const {
    register,
    handleSubmit,
    formState: { errors },
  } = useForm<ClientFormData>({
    resolver: zodResolver(clientSchema),
    defaultValues: client
      ? {
          name: client.name,
          type: client.type,
          siret: client.siret || "",
          address: client.address,
          contact: {
            ...client.contact,
            email: client.contact.email || "",
          },
          notes: client.notes || "",
          tags: client.tags,
        }
      : {
          type: "restaurant",
          address: { country: "France", street: "", city: "", postalCode: "" },
          contact: { name: "", phone: "", email: "" },
          tags: [],
        },
  });

  return (
    <form onSubmit={handleSubmit(onSubmit)} className="space-y-6">
      {/* Informations générales */}
      <div className="space-y-4">
        <h3 className="text-lg font-medium">Informations générales</h3>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div className="space-y-2">
            <Label htmlFor="name" required>Nom de l&apos;établissement</Label>
            <Input
              id="name"
              {...register("name")}
              error={!!errors.name}
              placeholder="Ex: Le Kebab du Coin"
            />
            {errors.name && (
              <p className="text-sm text-danger-500">{errors.name.message}</p>
            )}
          </div>

          <div className="space-y-2">
            <Label htmlFor="type" required>Type d&apos;établissement</Label>
            <select
              id="type"
              {...register("type")}
              className="flex h-10 w-full rounded-lg border border-border bg-background px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500"
            >
              {typeOptions.map((option) => (
                <option key={option.value} value={option.value}>
                  {option.label}
                </option>
              ))}
            </select>
          </div>

          <div className="space-y-2">
            <Label htmlFor="siret">SIRET (optionnel)</Label>
            <Input
              id="siret"
              {...register("siret")}
              placeholder="123 456 789 00012"
            />
          </div>
        </div>
      </div>

      {/* Adresse */}
      <div className="space-y-4">
        <h3 className="text-lg font-medium">Adresse</h3>

        <div className="space-y-2">
          <Label htmlFor="street" required>Adresse</Label>
          <Input
            id="street"
            {...register("address.street")}
            error={!!errors.address?.street}
            placeholder="123 rue de la Paix"
          />
          {errors.address?.street && (
            <p className="text-sm text-danger-500">{errors.address.street.message}</p>
          )}
        </div>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div className="space-y-2">
            <Label htmlFor="postalCode" required>Code postal</Label>
            <Input
              id="postalCode"
              {...register("address.postalCode")}
              error={!!errors.address?.postalCode}
              placeholder="75001"
            />
            {errors.address?.postalCode && (
              <p className="text-sm text-danger-500">{errors.address.postalCode.message}</p>
            )}
          </div>

          <div className="space-y-2">
            <Label htmlFor="city" required>Ville</Label>
            <Input
              id="city"
              {...register("address.city")}
              error={!!errors.address?.city}
              placeholder="Paris"
            />
            {errors.address?.city && (
              <p className="text-sm text-danger-500">{errors.address.city.message}</p>
            )}
          </div>
        </div>
      </div>

      {/* Contact */}
      <div className="space-y-4">
        <h3 className="text-lg font-medium">Contact</h3>

        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div className="space-y-2">
            <Label htmlFor="contactName" required>Nom du contact</Label>
            <Input
              id="contactName"
              {...register("contact.name")}
              error={!!errors.contact?.name}
              placeholder="Jean Dupont"
            />
            {errors.contact?.name && (
              <p className="text-sm text-danger-500">{errors.contact.name.message}</p>
            )}
          </div>

          <div className="space-y-2">
            <Label htmlFor="contactRole">Fonction (optionnel)</Label>
            <Input
              id="contactRole"
              {...register("contact.role")}
              placeholder="Gérant"
            />
          </div>

          <div className="space-y-2">
            <Label htmlFor="contactPhone" required>Téléphone</Label>
            <Input
              id="contactPhone"
              type="tel"
              {...register("contact.phone")}
              error={!!errors.contact?.phone}
              placeholder="06 12 34 56 78"
            />
            {errors.contact?.phone && (
              <p className="text-sm text-danger-500">{errors.contact.phone.message}</p>
            )}
          </div>

          <div className="space-y-2">
            <Label htmlFor="contactEmail">Email (optionnel)</Label>
            <Input
              id="contactEmail"
              type="email"
              {...register("contact.email")}
              error={!!errors.contact?.email}
              placeholder="contact@exemple.fr"
            />
            {errors.contact?.email && (
              <p className="text-sm text-danger-500">{errors.contact.email.message}</p>
            )}
          </div>
        </div>
      </div>

      {/* Notes */}
      <div className="space-y-2">
        <Label htmlFor="notes">Notes</Label>
        <Textarea
          id="notes"
          {...register("notes")}
          placeholder="Informations complémentaires..."
          rows={4}
        />
      </div>

      {/* Actions */}
      <div className="flex justify-end gap-3 pt-4 border-t border-border">
        <Button type="button" variant="outline" onClick={onCancel}>
          Annuler
        </Button>
        <Button type="submit" loading={isLoading}>
          {client ? "Mettre à jour" : "Créer le client"}
        </Button>
      </div>
    </form>
  );
}
