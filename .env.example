# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com

# Firebase Admin (for Cloud Functions)
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# Groq AI API (FREE tier available)
# Get your key at: https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key

# SAGE ERP Integration (optional)
SAGE_API_URL=https://api.accounting.sage.com
SAGE_CLIENT_ID=your_sage_client_id
SAGE_CLIENT_SECRET=your_sage_client_secret

# Virgil Security E2E Encryption (FREE up to 1000 users)
# Get your keys at: https://dashboard.virgilsecurity.com
VIRGIL_APP_ID=your_virgil_app_id
VIRGIL_APP_KEY_ID=your_key_id
VIRGIL_APP_KEY=your_private_key

# OpenRouteService API (optional, for higher quotas)
# FREE: 2000 requests/day
# Get key at: https://openrouteservice.org/dev/#/signup
ORS_API_KEY=your_ors_api_key

# Development
NEXT_PUBLIC_USE_EMULATORS=false
NODE_ENV=development
