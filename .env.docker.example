# ─── Port d'exposition ─────────────────────
# Production (Nginx)
APP_PORT=8080
# Development (Next.js dev server)
DEV_PORT=3000

# ─── Firebase (OBLIGATOIRE) ───────────────────
# Ces variables sont embarquées dans le build statique (NEXT_PUBLIC_*)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com

# ─── Firebase Admin (pour API routes / fonctions) ─────
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_CLIENT_EMAIL=firebase-adminsdk@your_project.iam.gserviceaccount.com

# ─── OpenAI (IA Scan Menu, Agent IA) ──────────
OPENAI_API_KEY=sk-your_openai_api_key

# ─── SendGrid Email ───────────────────────────
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=devis@distram.fr
SENDGRID_FROM_NAME=DISTRAM - Grossiste Halal

# ─── Stripe Paiements (optionnel) ─────────────
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# ─── Twilio SMS (optionnel) ───────────────────
TWILIO_ACCOUNT_SID=ACxxx
TWILIO_AUTH_TOKEN=xxx
TWILIO_PHONE_NUMBER=+33xxx

# ─── Google Maps (optionnel) ──────────────────
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaxxx

# ─── Application ──────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:8080
NEXT_PUBLIC_USE_EMULATORS=false
NODE_ENV=production
